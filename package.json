{
  "name": "jiminy-desktopapp",
  "version": "1.0.0",
  "description": "Jiminy menu bar app shell (macOS)",
  "main": "src/main.js",
  "scripts": {
    "clean": "rimraf dist",
    "dist:mac": "npm run clean && electron-builder --mac --arm64",
    "css": "tailwindcss -i ./src/dashboard/input.css -o ./src/dashboard/styles.css --watch",
    "css:build": "tailwindcss -i ./src/dashboard/input.css -o ./src/dashboard/styles.css --minify",
    "start": "npm run css:build && electron .",
    "dev": "tailwindcss -i ./src/dashboard/input.css -o ./src/dashboard/styles.css --watch & electron .",
    "rebuild:node": "npm rebuild better-sqlite3",
    "rebuild:electron": "electron-rebuild -f -w better-sqlite3",
    "pretest": "npm run rebuild:node",
    "prestart": "npm run rebuild:electron",
    "test": "find test -name \"*.test.js\" -not -path \"*/e2e/*\" -not -path \"*/modelProviderTests/*\" -print0 | xargs -0 node --test",
    "test:unit:timed": "node scripts/run-unit-tests-with-timeout.js",
    "test:modelProviderTests": "find test/modelProviderTests -name \"*.test.js\" -print0 | xargs -0 node --test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:modelProviderTests && npm run test:e2e && npm run test:unit:timed"
  },
  "repository": "https://github.com/jiminy-org/jiminy",
  "keywords": [
    "Electron",
    "menu bar",
    "macOS",
    "Jiminy"
  ],
  "build": {
    "appId": "com.jiminy.jiminy",
    "productName": "Jiminy",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "build/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "icon": "build/icon.icns"
    },
    "dmg": {
      "background": "build/background-jiminy-to-applications.png",
      "window": {
        "width": 450,
        "height": 250
      },
      "contents": [
        {
          "x": 180,
          "y": 170,
          "type": "file"
        },
        {
          "x": 380,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "author": "Jiminy",
  "license": "CC0-1.0",
  "dependencies": {
    "better-sqlite3": "^12.6.2"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "playwright": "^1.55.0",
    "rimraf": "^6.1.2",
    "tailwindcss": "^4.1.18"
  }
}
